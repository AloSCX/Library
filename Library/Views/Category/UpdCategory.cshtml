
@model GetAllCategory_Result

@using (Html.BeginForm("UpdCategory", "Category", FormMethod.Post))
{
    <section>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h2>Modificar Categoria</h2>
                </div>
                <br />
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Id:</td>
                                <td>@Html.DisplayTextFor(bk => Model.idCategory)</td>
                            </tr>
                            <tr>
                                <td>Nombre:</td>
                                <td>@Html.TextBoxFor(bk => Model.name, new { @class = "form-control" })</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <br />
                <div class="card-footer">
                    <button type="submit" name="submit" value="SaveUpd" class="btn btn-primary">Guardar</button>
                    <button type="submit" name="submit" value="CancelUpd" class="btn btn-primary">Cancelar</button>
                </div>
            </div>
        </div>
    </section>
}

