
@{
    ViewBag.Title = "Biblioteca";
}

@using (Html.BeginForm())
{
    <section>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h2>Biblioteca</h2>
                    <small>Selecciona una opcion</small>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><button type="submit" name="submit" value="Books" class="btn btn-primary">Libros</button></td>
                            </tr>
                            <tr>
                                <td><button type="submit" name="submit" value="Categories" class="btn btn-primary">Categorias</button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
}

